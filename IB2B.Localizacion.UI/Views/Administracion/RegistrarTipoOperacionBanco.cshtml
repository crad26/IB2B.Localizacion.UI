@model IB2B.Localizacion.UI.Models.TipoConfiguracionModel
@{
    ViewBag.Title = "RegistrarTipoOperacionBanco";
    Layout = "~/Views/Shared/_Layout.cshtml";
}







<div class="panel panel-default m-t-sm box box-primary" style="top:200px">

    <div class="panel-body p-t-xxs">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#RTOB">Tipo Operacion Banco</a></li>
            <li><a data-toggle="tab" href="#TCD">Categoria Detraccion</a></li>
            <li><a data-toggle="tab" href="#OD">Categoria Detraccion</a></li>
        </ul>

        <div class="tab-content">
            <!--INICIO DE REGISTRO TIPO DE OPERACIONES -->
            <div id="RTOB" class="tab-pane fade in active">
                <div id="RTOB" class="tab-pane fade in active">
                    <div class="panel-heading p-t-xxs p-b-none">
                        <div class="row">
                            <div class="col-sm-12">
                                <label>
                                    <i class="glyphicon glyphicon-user"></i> &nbsp;&nbsp; Registro
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body p-t-xxs">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        ID Operación
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon" id="dp">
                                                        Descripcion de Operacion
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />

                                </div>


                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        ID Pago/Cobro
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        Descripción de Pago/Cobro
                                                    </span>
                                                    @Html.DropDownListFor(model => model.oTipoOperacionBanco.ObPago_Cobro.Descripcion, new SelectList(Model.VLPago_Cobro, "Id", "Descripcion"), "- Seleccione -", new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class='input-group'>
                                            <span class="input-group-addon">
                                                Tipo
                                            </span>

                                            <div class="form-control row">
                                                <div class="col-sm-6">
                                                    <label class="form-check-inline">
                                                        <input type="radio" name="optradio">Option 1
                                                    </label>
                                                </div>
                                                <div class="col-sm-6">
                                                    <label class="form-check-inline">
                                                        <input type="radio" name="optradio">Option 2
                                                    </label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div><br />
                        </div>
                    </div>
                </div>
            </div>
            <!--FIN DE REGISTRO TIPO DE OPERACIONES -->
            <!--INICIO DE REGISTRO CATEGORIA DE DETRACCION -->
            <div id="TCD" class="tab-pane fade in">
                <div id="TCD" class="tab-pane fade in">
                    <div class="panel-heading p-t-xxs p-b-none">
                        <div class="row">
                            <div class="col-sm-12">
                                <label>
                                    <i class="glyphicon glyphicon-user"></i> &nbsp;&nbsp; Registro
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body p-t-xxs">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        ID Categoria
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                    <span class="input-group input-group-addon">
                                                        <button class="btn-warning " type="button">
                                                            <span class="glyphicon glyphicon-search">

                                                            </span>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon" id="dp">
                                                        Descripción
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />

                                </div>


                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        Porcentaje (%)
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        Monto Base
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--fin-->
            <!--INICIO DE OPERACION DETRACCION -->
            <div id="OD" class="tab-pane fade in">
                <div id="TCD" class="tab-pane fade in">
                    <div class="panel-heading p-t-xxs p-b-none">
                        <div class="row">
                            <div class="col-sm-12">
                                <label>
                                    <i class="glyphicon glyphicon-user"></i> &nbsp;&nbsp; Operacion Detraccion
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body p-t-xxs">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        ID Categoria
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                    <span class="input-group input-group-addon">
                                                        <button class="btn-warning " type="button">
                                                            <span class="glyphicon glyphicon-search">

                                                            </span>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class="form-check form-check-inline" style="padding-top:10px"> &nbsp;&nbsp;
                                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                                    &nbsp;&nbsp;
                                                    <label class="form-check-label" for="inlineCheckbox1"> Predeterminado</label>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                    <br />
                                </div>


                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="row">
                                                <div class='input-group'>
                                                    <span class="input-group-addon">
                                                        Descripción
                                                    </span>
                                                    @Html.TextBoxFor(model => model.oTipoOperacionBanco.ObOperacion.IdOperacionBanco, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--fin-->
            </div>
        </div>
    </div>
</div>

